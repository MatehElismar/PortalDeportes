<link rel="stylesheet" href="{{url}}/public/css/admin.css"> 
<script src="validacion.js"></script>
<div class="clear container">
    <table class="equipos left">
        <thead>
            <tr> 
                <th>Equipo</th> 
                <th>G</th> 
                <th>P</th> 
                <th>Ptc</th> 
                <th>PDL</th> 
                <th>Rach</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody class="table-body"> 
            {{#each teams}} 
            <tr id="{{this._id}}"> 
            <td class="Equipo">{{this.name}}</td>
            <td class="G">{{this.G}}</td>
            <td class="P">{{this.P}}</td>
            <td class="Ptc">{{this.PTC}}</td>
            <td class="PDL">{{this.PDL}}</td>
            <td class="Rach">{{this.rach}}</td>
            <td class="Acciones">
                <a onclick="goEdit('{{this._id}}')" class="editar">Editar</a> 
                <a onclick="deleteTeam('{{this._id}}')" class="borrar">Borrar</a>
            </td>  
            </tr>
            {{/each}}
        </tbody> 
    </table>


<div class="formulario right" id="form"> 
    <form id="team-form"> 
        <input type="hidden" name="_id" value="">
        <label for="">Mantenimiento de Equipos</label>  
            <div><input type="text" placeholder="Equipo" name="name" id="equipo" required></div>
            <div><input type="number" placeholder="G" name="G" id="g" required></div>
            <div><input type="number" placeholder="P" name="P" id="p" required></div>
            <div><input type="number" placeholder="PTC" name="PTC" id="ptc" required></div>
            <div><input type="number" placeholder="PDL" name="PDL" id="pdl" required></div>
            <div><input type="number" placeholder="RACH" name="rach" id="rach" required></div>
            <div>
                <input id="submit-btn" class="submit" align="center" type="submit" value="Insertar">
                {{!-- <a   type="submit">Insertar</a> --}}
            </div> 
    </form> 

</div> 


</div>
   

<script src="{{url}}/public/js/admin.js"></script>

